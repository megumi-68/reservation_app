<h2>予約内容画面</h2>

<div class="yoyakuconfirm">
 <div class="in">
 <table class="reservationtable">
  <tr>
   <th>予約した部屋</th>
   <td><%= @reservation.room.name %></td>
  </tr>
  <tr>
   <th>開始日</th>
   <td><%= @reservation.start_day.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
   <th>終了日</th>
   <td><%= @reservation.end_day.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
   <th>人数</th>
   <td><%= @reservation.num_people %>人</td>
  </tr>
  <tr>
   <th>価格</th>
   <td><%= @reservation.total_price %>円</td>
  </tr>
  <tr>
   <th>使用日数</th>
   <td><%= @reservation.use_day %>日</td>
  </tr>
 </table>
 
 </div>
 </div>
