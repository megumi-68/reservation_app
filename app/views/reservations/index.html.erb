<div class="container-fluid reservations">
 <h4 class="pb-4">予約済みルーム一覧</h4>

 <table>
  <div class= "thead">
   <tr align ="center">
    <th>ルーム画像</th>
    <th>ルーム名</th>
    <th>ルーム紹介</th>
    <th>合計料金</th>
    <th>開始日</th>
    <th>終了日</th>
     <th>予約確定日時</th>
   </tr>
  </div>
  
  <tbody>
  <%= paginate @reservations %>
  <% @reservations.each do |reservation| %>
  <tr>
   <td><%= link_to attachment_image_tag( reservation.room, :roomimage, fallback: "no_image_logo.png", size: '240x140'), room_path(reservation.room_id), data: {"turbolinks"=>false} %></td>
   <td><%= link_to reservation.room.name, room_path(reservation.room_id), data: {"turbolinks"=>false} %></td>
   <td><%= reservation.room.introduce %></td>
   <td>￥<%= reservation.total_price %></td>
   <td><%= reservation.start_day.strftime("%Y年 %m月 %d日")  %></td>
   <td><%= reservation.end_day.strftime("%Y年 %m月 %d日")  %></td>
   <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
   <% if current_user.id == reservation.user_id %>
   <td><%= link_to '削除する', reservation_path(reservation), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" } %></td>
   <% end %>
  </tr>
   <% end %>
  <tbody>
 </table>
 </div>