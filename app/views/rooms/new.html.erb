<h2>ルーム情報登録</h2>

    <%= form_with model: @room, local: true do |f| %>
      <% if @room.errors.any? %>
       <% @room.errors.full_messages.each do |message| %>
        <ul>
         <li><%= message %></li>
        </ul>
       <% end %>
      <% end %>

      <table>
        <tr>
          <th><%= f.label :name ,"ルーム名" %></th>
          <td><%= f.text_field :room %></td>
        </tr>
 
        <tr>
          <th><%= f.label :introduce ,"ルーム紹介" %></th>
          <td><%= f.text_field :introduce %></td>
        </tr>
 
        <tr>
          <th><%= f.label :price ,"料金" %></th>
          <td><%= f.text_field :price %></td>
        </tr>
 
        <tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_field :address %>
        </tr>

        <tr>
          <th><%= f.label :image ,"ルーム画像" %></th>
          <td><%= f.file_field :image %></td>
        </tr>
      </table>

      <div>
        <ul>
          <li><%= f.submit "登録"%></li>
        </ul>
      </div>
    <% end %>