<div class="col-lg-10 user view">
 <div class="user-view-box">
 <div class="update-content">
  <div class="row">
    <h5>プロフィール</h5>
  </div>
 </div>

<%= form_with model:@user, url: user_path(@user), local: true do |f| %>
<div class="update-content">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="icon-box">
        <%= image_tag 'default_icon.jpg', alt: 'アイコン画像', class: "icon-image host-icon" %>
      </div>
   </div>
  </div>
</div>

<div class="update-content">
  <div class="row">
    <%= f.label :アイコン画像 %>
      <input class="mb-4 col-md-9" placeholder="アイコン画像をアップロード" type="file" name="user[image]" id="user_image">
  </div>
</div>

<div class="update-content">
  <div class="row">
    <%= f.label :名前 %>
    <%= f.text_field :name, autofocus: true, required: true, class: 'form-control', maxlength: "40", size: "40" %>
  </div>
</div>

<div class="update-content">
  <div class="row">
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduce, autofocus: true, class: 'form-control', size: '40x5' %>
  </div>
</div>

<div class="update-content">
  <div class="row">
    <%= f.submit "更新する", class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
</div>
</div>