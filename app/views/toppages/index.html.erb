      <%= image_submit_tag("img_osaka.jpg", class: 'place-picture') %>
      <% end %>
    </div>
    <div class="place col-lg-3 col-6 wrap">
      <span>京都</span>
      <%= form_with url: rooms_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :area, :value => "京都" %>
      <%= image_submit_tag("img_kyoto.jpg", class: 'place-picture') %>
      <% end %>
    </div>
    <div class="place col-lg-3 col-6 wrap">
      <span>札幌</span>
      <%= form_with url: rooms_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :area, :value => "札幌" %>
       <%= image_submit_tag("img_sapporo.jpg", class: 'place-picture') %>
      <% end %>
    </div>
  </div>
</div>
</div>
