
 <div class="top">
 <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
              <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
              <label for="___">エリア</label>
              <%= form_with url: rooms_search_path, method: :get, local: true do |f| %>
              <div class="form-group">
              <%= f.text_field :area, value: @area, :placeholder => "東京" %>
              </div>
              <%= f.submit "探す", class: 'btn btn-primary btn-block' %>
              <% end %>                  
          </div>
        </div>
      </div>
    </div>
 </div>
    
<div class="container">
<div class="m-5">
  <h1 class="section-title">おすすめのエリア</h1>
  <div class="row">
    <div class="place col-lg-3 col-6 wrap">
      <span>東京</span>
      <%= form_with url: rooms_search_path, method: :get, local: true do |f| %>
      <%= f.hidden_field :area, :value => "東京" %>
      <%= image_submit_tag("img_tokyo.jpg", class: 'place-picture') %>
      <% end %>
    </div>
    <div class="place col-lg-3 col-6 wrap">
